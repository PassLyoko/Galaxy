
<MenuWidget>:
    canvas.before:
        Color: 
            rgba: 0,0,0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(80)
        font_name: "fonts/PLANK___.ttf"
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button: 
        font_size: dp(30)
        font_name: "fonts/A new Heard Decorative.otf"
        text: root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint: .2, .1
        on_press: root.parent.on_menu_press()
        background_normal: ''
        background_color: 1 , .3, .4, .85